<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="RouletteView">
        <attr name="backgroundLineColor" format="reference|color"/>
        <attr name="backgroundLineWidth" format="reference|dimension"/>

        <attr name="rouletteTextColor" format="reference|color"/>
        <attr name="rouletteTextSize" format="reference|dimension"/>

        <attr name="centerPointRadius" format="reference|dimension"/>
        <attr name="centerPointColor" format="reference|color"/>
        <attr name="centerPointVisibility" format="enum">
            <enum name="gone" value="8" />
            <enum name="invisible" value="4" />
            <enum name="visible" value="0" />
        </attr>

        <attr name="topMarkerColor" format="reference|color"/>
        <attr name="topMarkerVisibility" format="enum">
            <enum name="gone" value="8" />
            <enum name="invisible" value="4" />
            <enum name="visible" value="0" />
        </attr>

        <attr name="rouletteSize" format="integer"/>
        <attr name="emptyMessage" format="string"/>
    </declare-styleable>
</resources>